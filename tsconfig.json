{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "declaration": true,
        "noImplicitAny": false,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "build",
        "incremental": false
    },
    "allowSyntheticDefaultImport": true,
    "include": ["src/*.ts"],
    "exclude": ["node_modules"],
}
