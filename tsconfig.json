{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "declaration": true,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "build",
        "incremental": false,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "strictBindCallApply": true
    },
    "allowSyntheticDefaultImport": true,
    "include": ["src/*.ts"],
    "exclude": ["node_modules"]
}
